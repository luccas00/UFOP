package desvio_condicional;

public class Pessoa {
	
	private int idade;
	private double peso;
	private char letra;

	public void setIdade(int idade) {
		this.idade = idade;
	}
	
	public void setPeso(double peso) {
		this.peso = peso;
	}
	
	public void setLetra(char a) {
		this.letra = a;
	}
	
	public int getIdade() {
		return this.idade;
	}
	
	public double getPeso() {
		return this.peso;
	}
	
	public char getLetra() {
		return this.letra;
	}

}



