package laco_de_repeticao;

import java.util.Scanner;

public class Ex_1 {
	
public static void main (String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		int num;
		
		System.out.println("Digite um numero inteiro");
		num = sc.nextInt();
		
		for (int i = 0; i < num; i++) {
			num += i;
		}
		
		System.out.println("Somatorio = [" + num + "]");
		
	}

}
