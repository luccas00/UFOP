package desvio_condicional;

public class Pessoa {
	
	private int idade;
	private double peso;
	private String nome;

	public void setIdade(int idade) {
		this.idade = idade;
	}
	
	public void setPeso(double peso) {
		this.peso = peso;
	}
	
	public void setNome(String nome) {
		this.nome = nome;
	}
	
	public int getIdade() {
		return this.idade;
	}
	
	public double getPeso() {
		return this.peso;
	}
	
	public String getNome() {
		return this.nome;
	}

}



